<Window x:Class="MusicAppLast.AddTrackWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Добавить трек" Height="350" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Название трека:" Grid.Row="0" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <TextBox x:Name="titleTextBox" Grid.Row="0" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Исполнитель:" Grid.Row="1" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <TextBox x:Name="artistTextBox" Grid.Row="1" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Длина:" Grid.Row="2" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <TextBox x:Name="lengthTextBox" Grid.Row="2" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Альбом:" Grid.Row="3" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <TextBox x:Name="albumTextBox" Grid.Row="3" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Жанр:" Grid.Row="4" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <TextBox x:Name="genreTextBox" Grid.Row="4" Grid.Column="1" Margin="5"/>

        <TextBlock Text="Год:" Grid.Row="5" Grid.Column="0" Margin="5" VerticalAlignment="Center"/>
        <TextBox x:Name="yearTextBox" Grid.Row="5" Grid.Column="1" Margin="5"/>

        <Button Content="Принять" Grid.Row="6" Grid.Column="1" HorizontalAlignment="Right" Width="100" Margin="5" Click="AcceptButton_Click"/>
    </Grid>
</Window>
